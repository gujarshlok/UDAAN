<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="sp.udaan.Fragments.QuizFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/padding8dp"
                app:cardElevation="@dimen/padding4dp"
                android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/quizfragment_previousscore"
                android:textColor="@color/primary_text"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Your Score:"/>

                <ImageButton
                    android:id="@+id/leaderboardbutton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/leaderboard" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="@dimen/padding8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/padding8dp"
                        app:cardBackgroundColor="@color/authui_colorAccent"
                        app:cardElevation="@dimen/padding4dp"
                        app:cardCornerRadius="@dimen/padding8dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="Question will appear here"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp"
                            android:id="@+id/quizfragment_questiontext"/>
                    </android.support.v7.widget.CardView>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/quizfragment_optiongroup"
                        android:layout_marginBottom="@dimen/padding8dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="@dimen/padding8dp">

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Option1"
                            android:buttonTint="@color/authui_colorAccent"
                            android:padding="10dp"
                            android:background="@drawable/rounded_corners"
                            android:clickable="true"
                            android:layout_marginBottom="4dp"
                            android:foreground="?android:selectableItemBackground"
                            android:id="@+id/quizfragment_radiooption1"/>

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/authui_colorAccent"
                            android:text="Option2"
                            android:padding="10dp"
                            android:clickable="true"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/rounded_corners"
                            android:foreground="?android:selectableItemBackground"
                            android:id="@+id/quizfragment_radiooption2"/>

                        <RadioButton
                            android:layout_width="match_parent"
                            android:buttonTint="@color/authui_colorAccent"
                            android:layout_height="wrap_content"
                            android:text="Option3"
                            android:clickable="true"
                            android:foreground="?android:selectableItemBackground"
                            android:layout_marginBottom="4dp"
                            android:padding="10dp"
                            android:background="@drawable/rounded_corners"
                            android:id="@+id/quizfragment_radiooption3"/>

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Option4"
                            android:buttonTint="@color/authui_colorAccent"
                            android:layout_marginBottom="4dp"
                            android:clickable="true"
                            android:foreground="?android:selectableItemBackground"
                            android:padding="10dp"
                            android:background="@drawable/rounded_corners"
                            android:id="@+id/quizfragment_radiooption4"/>

                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/padding8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/padding8dp"
                app:cardBackgroundColor="@color/authui_colorAccent"
                app:cardElevation="@dimen/padding4dp"
