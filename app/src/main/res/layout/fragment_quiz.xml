            </android.support.v7.widget.CardView>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quizfragment_optiongroup2"
                android:layout_marginBottom="@dimen/padding8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/padding8dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:buttonTint="@color/authui_colorAccent"
                    android:layout_height="wrap_content"
                    android:text="Option1"
                    android:padding="10dp"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@drawable/rounded_corners"
                    android:id="@+id/quizfragment_radiooption21"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option2"
                    android:padding="10dp"
                    android:buttonTint="@color/authui_colorAccent"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@drawable/rounded_corners"
                    android:id="@+id/quizfragment_radiooption22"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option3"
                    android:layout_marginBottom="4dp"
                    android:buttonTint="@color/authui_colorAccent"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@drawable/rounded_corners"
                    android:padding="10dp"
                    android:id="@+id/quizfragment_radiooption23"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option4"
                    android:padding="10dp"
                    android:buttonTint="@color/authui_colorAccent"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@drawable/rounded_corners"
                    android:id="@+id/quizfragment_radiooption24"/>

            </RadioGroup>


        </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/padding8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/padding8dp"
                app:cardBackgroundColor="@color/authui_colorAccent"
                app:cardElevation="@dimen/padding4dp"
                app:cardCornerRadius="@dimen/padding8dp"
                android:layout_height="match_parent">

            <TextView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:text="Question will appear here"
                android:id="@+id/quizfragment_questiontext3"/>

            </android.support.v7.widget.CardView>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quizfragment_optiongroup3"
                android:layout_marginBottom="@dimen/padding8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/padding8dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option1"
                    android:buttonTint="@color/authui_colorAccent"
                    android:padding="10dp"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@drawable/rounded_corners"
                    android:id="@+id/quizfragment_radiooption31"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option2"
                    android:buttonTint="@color/authui_colorAccent"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@drawable/rounded_corners"
                    android:padding="10dp"
                    android:id="@+id/quizfragment_radiooption32"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option3"
                    android:buttonTint="@color/authui_colorAccent"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@drawable/rounded_corners"
                    android:padding="10dp"
                    android:id="@+id/quizfragment_radiooption33"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option4"
                    android:buttonTint="@color/authui_colorAccent"
                    android:padding="10dp"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:background="@drawable/rounded_corners"
                    android:id="@+id/quizfragment_radiooption34"/>

            </RadioGroup>


        </LinearLayout>
        </android.support.v7.widget.CardView>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SUBMIT"
                android:textSize="16dp"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="24dp"
                android:textColor="#fff"
                android:id="@+id/quizfragment_submitbutton"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
